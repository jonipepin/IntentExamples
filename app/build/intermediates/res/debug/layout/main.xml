<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#333333"
    android:weightSum="1.0">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:weightSum="1.0">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#f8f8f8"
            android:textColor="#444444"
            android:layout_margin="2dp"
            android:text="Dial Phone"
            android:onClick="dialPhone" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#f8f8f8"
            android:textColor="#444444"
            android:layout_margin="2dp"
            android:text="Place Call"
            android:onClick="placeCall"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:weightSum="1.0">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#f8f8f8"
            android:textColor="#444444"
            android:layout_margin="2dp"
            android:text="Open Browser"
            android:onClick="openWebBrowser"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#f8f8f8"
            android:textColor="#444444"
            android:layout_margin="2dp"
            android:text="Show Map"
            android:onClick="showMap"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:weightSum="1.0">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#f8f8f8"
            android:textColor="#444444"
            android:layout_margin="2dp"
            android:text="My Browser"
            android:onClick="launchMyBrowser"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#f8f8f8"
            android:textColor="#444444"
            android:layout_margin="2dp"
            android:text="Show Chooser"
            android:onClick="showChooser"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:weightSum="1.0">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#f8f8f8"
            android:textColor="#444444"
            android:layout_margin="2dp"
            android:text="Google Search"
            android:onClick="dosearch" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#f8f8f8"
            android:textColor="#444444"
            android:layout_margin="2dp"
            android:text="Change Settings"
            android:onClick="changeSettings" />

    </LinearLayout>

</LinearLayout><!-- From: file:/home/scs/pepin/AndroidStudioProjects/IntentExamples/app/src/main/res/layout/main.xml -->